<EditForm Model="publicacion" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
            <label>Texto</label>
            <div>
                <InputText class="form-control" @bind-Value="@publicacion.Texto"/>
                <ValidationMessage For="@(() => publicacion.Texto)"/>

            </div>
    </div>
    

    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Publicacion publicacion { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        base.OnInitializedAsync();

        publicacion.CuentasId = "0";
        publicacion.ID = 0;
    }


}
