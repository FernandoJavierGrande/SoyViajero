<EditForm Model="publicacion" OnValidSubmit="onValidSubmit" class="formPublicacion">
    <DataAnnotationsValidator/>
    <div class="containerInpBtns">
        <div class="contInput">
            <InputText class="inputPbl"  placeholder="Cuéntanos tu experiencia..." @bind-Value="@publicacion.Texto" />
            <ValidationMessage For="@(() => publicacion.Texto)"/>
        </div>
        <div class="btnsCancFoto">
            <button class="btns" @onclick="onCancel">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#FFB800" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                </svg>
                <i class="bi bi-x-circle-fill"></i>
            </button>
            <button class="btns">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#FFB800" class="bi bi-image-fill" viewBox="0 0 16 16">
                <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2V3zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0z"/>
                </svg>
                <i class="bi bi-image-fill"></i>
            </button>
        </div>
    </div>

    <div class="divBtnPublicar">
        <button class="btnPublicar" type="submit">Publicar</button>
    </div>   
</EditForm>

@code {
    [Parameter] public Publicacion publicacion { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }

    protected override async Task OnInitializedAsync()
    {
        base.OnInitializedAsync();

        publicacion.CuentasId = "0";
        publicacion.ID = 0;
    }

}
