<EditForm Model="cuentaViajero" OnValidSubmit="onValidSubmit">

    <DataAnnotationsValidator/>
    <div class="form-group">
            <label>Nombre</label>
            <div>
                <InputText class="form-control" @bind-Value="cuentaViajero.Nombre"/>
                <ValidationMessage For="@(() => cuentaViajero.Nombre)"/>

            </div>
    </div>

    <div class="form-group">
            <label>Apellido</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaViajero.Apellido"/>
                <ValidationMessage For="@(() => cuentaViajero.Apellido)"/>

            </div>
    </div>

    <div class="form-group">
            <label>Ciudad</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaViajero.Ciudad"/>
                <ValidationMessage For="@(() => cuentaViajero.Ciudad)"/>

            </div>
    </div>

        <div class="form-group">
            <label>Provincia</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaViajero.Provincia"/>
                <ValidationMessage For="@(() => cuentaViajero.Provincia)"/>

            </div>
    </div>

        <div class="form-group">
            <label>País</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaViajero.Pais"/>
                <ValidationMessage For="@(() => cuentaViajero.Pais)"/>

            </div>
    </div>

    <div class="form-group">
            <label>Descripción</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaViajero.Descripcion"/>
                <ValidationMessage For="@(() => cuentaViajero.Descripcion)"/>

            </div>
    </div>

    <div class="form-group">
            <label>Foto</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaViajero.FotoPerfil"/>
                <ValidationMessage For="@(() => cuentaViajero.FotoPerfil)"/>

            </div>
    </div>

        <div class="form-group">
            <label>Edad</label>
            <div>
                <InputNumber class="form-control" @bind-Value="@cuentaViajero.Edad"/>
                <ValidationMessage For="@(() => cuentaViajero.Edad)"/>

            </div>
    </div>
    

    <button class="btn btn-primary" type="submit">Aceptar</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {
    [Parameter] public CuentaViajero cuentaViajero { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
