<EditForm Model="cuentaHostel" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
            <label>Nombre</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaHostel.Nombre"/>
                <ValidationMessage For="@(() => cuentaHostel.Nombre)"/>

            </div>
    </div>

    <div class="form-group">
            <label>Ciudad</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaHostel.Ciudad"/>
                <ValidationMessage For="@(() => cuentaHostel.Ciudad)"/>

            </div>
    </div>

        <div class="form-group">
            <label>Provincia</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaHostel.Provincia"/>
                <ValidationMessage For="@(() => cuentaHostel.Provincia)"/>

            </div>
    </div>

        <div class="form-group">
            <label>País</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaHostel.Pais"/>
                <ValidationMessage For="@(() => cuentaHostel.Pais)"/>

            </div>
    </div>

    <div class="form-group">
            <label>Descripción</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaHostel.Descripcion"/>
                <ValidationMessage For="@(() => cuentaHostel.Descripcion)"/>

            </div>
    </div>

    <div class="form-group">
            <label>Foto</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaHostel.FotoPerfil"/>
                <ValidationMessage For="@(() => cuentaHostel.FotoPerfil)"/>

            </div>
    </div>

        <div class="form-group">
            <label>Teléfono</label>
            <div>
                <InputNumber class="form-control" @bind-Value="@cuentaHostel.Telefono"/>  @*cambiar a texto en bbdd*@
                <ValidationMessage For="@(() => cuentaHostel.Telefono)"/>

            </div>
    </div>
    <div class="form-group">
            <label>Mail</label>
            <div>
                <InputText class="form-control" @bind-Value="@cuentaHostel.Mail"/>
                <ValidationMessage For="@(() => cuentaHostel.Mail)"/>

            </div>
    </div>

    <button class="btn btn-primary" type="submit">Crear</button>
    <button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>

@code {

    [Parameter] public CuentaHostel cuentaHostel { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; } 
    protected override async Task OnInitializedAsync()
    {
        cuentaHostel.Activo = true;

    }
}
